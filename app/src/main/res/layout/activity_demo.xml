<RelativeLayout xmlns:android=			"http://schemas.android.com/apk/res/android"
                xmlns:tools=			"http://schemas.android.com/tools"
                xmlns:circularProgress=	"http://schemas.android.com/apk/res-auto"
                android:layout_width=	"match_parent"
                android:layout_height=	"match_parent"
                tools:context=			"momentum.circularprogress.DemoActivityFragment"
                android:background=		"@drawable/background_main">

    <momentum.modules.circularprogressview.CircularProgressView
        android:id=							"@+id/circularprogress"
        android:layout_width=				"match_parent"
        android:layout_height=				"match_parent"
        circularProgress:progressColor=		"#FFFFFFFF"
        circularProgress:progressText=		"Progress - #VAL#%%"
        circularProgress:progressTextFont=	"consolab.ttf"
        circularProgress:progressTextSize=	"36"
        circularProgress:borderOffset=		"250"
        circularProgress:fadeTimeMs=		"1000"/>

    <Button	android:id=							"@+id/startRandom"
            android:onClick=					"onStartRandomClicked"
            android:layout_width=				"wrap_content"
            android:layout_height=				"wrap_content"
            android:text=						"Random"
            android:layout_alignParentBottom=	"true"
            android:layout_centerInParent=      "true"
            tools:ignore=						"HardcodedText"/>

    <Button	android:id=							"@+id/startRandom0"
            android:onClick=					"onStartRandomClicked0"
            android:layout_width=				"wrap_content"
            android:layout_height=				"wrap_content"
            android:text=						"0 -----"
            android:layout_alignParentBottom=	"true"
            android:layout_toLeftOf=            "@id/startRandom"
            tools:ignore=						"HardcodedText"/>

    <Button	android:id=							"@+id/startRandom1"
            android:onClick=					"onStartRandomClicked1"
            android:layout_width=				"wrap_content"
            android:layout_height=				"wrap_content"
            android:text=						"----- 1"
            android:layout_alignParentBottom=	"true"
            android:layout_toRightOf=           "@id/startRandom"
            tools:ignore=						"HardcodedText"/>
</RelativeLayout>
